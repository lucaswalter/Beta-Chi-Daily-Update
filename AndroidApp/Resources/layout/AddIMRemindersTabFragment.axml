        android:layout_width="match_parent"
        android:layout_height="77.3dp"
        android:id="@+id/buttonIMDate"
        android:textSize="25dp" />
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="319.1dp"
        android:id="@+id/listViewAddIMReminders" />
    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="77.3dp"
        android:id="@+id/buttonAddIMReminder" />
    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="77.3dp"
        android:id="@+id/buttonIMSave" />
</LinearLayout>